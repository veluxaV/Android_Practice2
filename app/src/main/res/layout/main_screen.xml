<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:text="@string/app_name"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:padding="12dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/small_title"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мой автомобиль"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/add_car_text"
        android:layout_below="@+id/small_title"
        android:layout_centerInParent="true"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:text="У вас ещё нет автомобиля :("
        android:textColor="@color/dark_grey" />

    <Button
        android:id="@+id/add_car_button"
        android:layout_below="@id/add_car_text"
        android:layout_centerInParent="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Добавить автомобиль"
        android:background="@color/red"
        />

</RelativeLayout>